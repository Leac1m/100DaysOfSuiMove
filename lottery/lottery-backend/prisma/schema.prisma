
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Game {
  dbId String @id @unique @default(uuid())
  game_id String @unique
  name String
  cost_in_sui String
  pool String
  end_time String
  winner String
  reward_claimed Boolean
}

model GameCreated {
  dbId String @id @unique @default(uuid())
  game_id String @unique
  name String
  cost_in_sui String
  end_time String
}

model RewardChaimed {
  dbId String @id @unique @default(uuid())
  game_id String
  participant_index Int
  reward String
}

model TicketDestroyed {
  dbId String @id @unique @default(uuid())
  game_id String
  participant_index Int
}

model TicketPurchase {
  dbId String @id @unique @default(uuid())
  game_id String
  game_name String
  participant_index Int
  end_time String
}

model WinnerDetermined {
  dbId String @id @unique @default(uuid())
  game_id String
  participant_index Int
}


model cursor {
  id        String @id
  eventSeq  String
  txDigest  String
}